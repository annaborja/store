<%= form_for resource, as: resource_name, html: { class: 'form-styled' }, url: registration_path(resource_name) do |f| %>
  <%- if resource.errors.present? %>
    <div class="alert alert-danger">
      <ul class="text-left">
        <%- resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end -%>
      </ul>
    </div>
  <% end %>

  <h2 class="form-styled-heading"><%= t('authentication.signup.title') %></h2>

  <fieldset>
    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email,
      autofocus: true,
      class: 'form-control',
      placeholder: t('authentication.placeholder.email'),
      required: true
    %>
  </fieldset>

  <fieldset class="input-sandwich">
    <%= f.label :password, class: 'sr-only' %>
    <%= f.password_field :password,
      autocomplete: 'off',
      class: 'form-control',
      minlength: @minimum_password_length,
      placeholder: t('authentication.placeholder.password.create', n: @minimum_password_length),
      required: true
    %>

    <%= f.label :password_confirmation, class: 'sr-only' %>
    <%= f.password_field :password_confirmation,
      autocomplete: 'off',
      class: 'form-control',
      minlength: @minimum_password_length,
      placeholder: t('authentication.placeholder.password_confirmation'),
      required: true
    %>
  </fieldset>

  <%= f.submit t('authentication.signup.submit'), class: 'btn btn-lg btn-primary btn-block' %>

  <div class="devise-links">
    <%= render 'devise/shared/links' %>
  </div>
<% end %>
